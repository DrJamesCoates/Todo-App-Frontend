<% provide(:title, "Edit Todo") %>

<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with(url: todo_url, method: :put, local: true) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", value: @todo.title %>

      <%= f.label :deadline %>
      <%= f.date_field :deadline, min: Date.today, class: "form-control", value: @todo.deadline %>

      <%= f.submit "Update todo", class: "btn btn-primary" %>
    
    <% end %>
  
  </div>
</div>
