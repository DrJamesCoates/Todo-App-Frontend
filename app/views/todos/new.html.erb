<% provide(:title, "New Todo") %>

<h1>New Todo</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with(url: todos_url, local: true) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :deadline %>
      <%= f.date_field :deadline, min: Date.today, class: "form-control" %>

      <%= f.submit "Create Todo", class: "btn btn-primary" %>
    
    <% end %>
  
  </div>
</div>
