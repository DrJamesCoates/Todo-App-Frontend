<% provide(:title, "New Todo Item") %>

<div class="row">
  <h1><%= @todo_title %></h1>
  <div class="col-md-6 col-md-offset-3">

    <%= form_with(url: todo_items_url, local: true) do |f| %>

      <%- f.hidden_field :todo_id, value: @todo_id %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit "Add item", class: "btn btn-primary" %>
    
    <% end %>

  </div>
</div>
