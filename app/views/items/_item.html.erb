<div class="row vertical-align" style="padding-top: 10px; padding-bottom: 10px;">
  <li><div class="col-md-6">
      <h3 style="padding-top: 0"><%= item[:name] %></h3>
      <h5><%= link_to "Edit", edit_todo_item_url(item[:todo_id], item[:id], done: item[:done]), id: "quicklink" %></h5>
      <h5><%= link_to "Delete", todo_item_url(item[:todo_id], item[:id]), method: :delete, data: { confirm: "Are you sure?" }, id: "quicklink" %></h5>
    </div>
    <div class="col-md-2" style="padding-top: 30px; text-align: center;">
      <% if item[:done] %>
        <%= link_to "complete", todo_item_url(item[:todo_id], item[:id], name: item[:name], done: false), method: :put, id: "item-complete"%>
      <% else %>
        <%= link_to "incomplete", todo_item_url(item[:todo_id], item[:id], name: item[:name], done: true), method: :put, id: "item-incomplete"%>
      <% end %>
    </div>
  </li>
</div>